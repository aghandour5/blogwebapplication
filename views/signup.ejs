<%- include ("partials/mobileheader.ejs") %>

<div class="form-container">
  <div class="form-box">
    <div class="register-container" id="register">
      <div class="top">
        <span>Already have an account? <a href="/login">Login</a></span>
        <header>Sign Up</header>
      </div>
      <form action="/signup" method="POST">
        <div class="two-forms">
          <div class="input-box">
            <input type="text" class="input-field" name="firstName" placeholder="Firstname" required>
            <i class="bx bx-user"></i>
          </div>
          <div class="input-box">
            <input type="text" class="input-field" name="lastName" placeholder="Lastname" required>
            <i class="bx bx-user"></i>
          </div>
        </div>
        <div class="input-box">
          <input type="email" class="input-field editing" name="email" placeholder="Email" required>
          <i class="bx bx-envelope"></i>
        </div>
        <div class="input-box">
          <input type="password" class="input-field editing" name="password" placeholder="Password" required>
          <i class="bx bx-lock-alt"></i>
        </div>
        <div class="input-box">
          <input type="submit" class="submit" value="Submit">
        </div>
      </form>
    </div>
  </div>
</div>

<script src="/js/index.js" defer></script>
<%- include("partials/footer.ejs") %>